<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".VerBoleto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/shadow"
        android:elevation="10dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0.85">

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="20dp"
            android:text="Código de acceso al evento"
            android:textStyle="bold"
            android:textColor="@color/azul"
            android:textAlignment="center"
            android:textSize="20sp"
            android:scrollbars="vertical"/>
        <FrameLayout
            android:id="@+id/editarFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_gray"
            android:elevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            android:alpha="0.85">
            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="25dp"
                android:padding="10dp"
                android:text="00000"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/rounded_blue_gradient"
                android:textSize="100sp" />
            <EditText
                android:id="@+id/edtcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="25dp"
                android:padding="10dp"
                android:hint="CÓDIGO"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/rounded_blue_gradient"
                android:textSize="80sp" />
            <Button
                android:id="@+id/veriicar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintVertical_bias="0"
                android:layout_marginTop="90dp"
                android:layout_gravity="center"
                android:text="Verificar"
                android:textSize="50dp"
                android:background="@drawable/rounded_dark" />
            <Button
                android:id="@+id/volver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="24dp"
                app:layout_constraintVertical_bias="0"
                android:layout_marginTop="170dp"
                android:layout_gravity="center"
                android:text="Volver"
                android:background="@drawable/rounded_primario" />

            <TextView
                android:id="@+id/nombreCli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="200dp"
                android:text="Tus eventos Disponibles"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/nombreEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="225dp"
                android:text="Tus eventos Disponibles"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/restaurante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="250dp"
                android:text="Tus eventos Disponibles"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/domicilio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="275dp"
                android:text="Tus eventos Disponibles"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/fechayhora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="300dp"
                android:text="Tus eventos Disponibles"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="normal" />
        </FrameLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>