<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".RestaurantesActivity">
    <TextView
        android:id="@+id/gUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="35dp"
        android:text="Hola UserName"
        android:textStyle="bold"
        android:textColor="@color/blanco"
        android:textSize="20sp"
        android:textAlignment="center" />
    <ImageView
        android:id="@+id/Logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="clip_horizontal"
        android:layout_marginTop="25dp"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />
    <ImageButton
        android:id="@+id/imgBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="clip_horizontal"
        android:layout_marginTop="32dp"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.908"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu" />
    <FrameLayout
        android:id="@+id/menu"
        android:layout_width="150dp"
        android:layout_height="190dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded_blue"
        android:elevation="20dp"
        android:layout_marginLeft="250dp"
        android:padding="10dp"
        android:alpha="0.9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible" >
        <Button
            android:id="@+id/inicio"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center|top"
            android:background="@color/azul"
            android:text="Ir al Inicio"
            android:textColor="@color/blanco"
            android:textSize="16sp"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/perfil"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="40dp"
            android:background="@color/azul"
            android:text="Mi Perfil"
            android:textColor="@color/blanco"
            android:textSize="16sp"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/restaurantes"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="80dp"
            android:background="@color/azul"
            android:text="Restaurantes"
            android:textColor="@color/blanco"
            android:textSize="16sp"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/eventos"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="120dp"
            android:background="@color/azul"
            android:text="Eventos"
            android:textColor="@color/blanco"
            android:textSize="16sp"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/usuarios"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="160dp"
            android:background="@color/azul"
            android:text="Usuarios"
            android:textColor="@color/blanco"
            android:textSize="16sp"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/cerrarSesion"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="200dp"
            android:background="@color/azul"
            android:text="Cerrar Sesión"
            android:textColor="@color/blanco"
            android:textSize="16sp"
            android:textAllCaps="false"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/shadow"
        android:elevation="10dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0.85">
        <TextView
            android:id="@+id/gTituloLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="20dp"
            android:text="Restaurantes"
            android:textStyle="bold"
            android:textColor="@color/azul"
            android:textSize="20sp" />
        <FrameLayout
            android:id="@+id/modalDelete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|top"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="80dp"
            android:layout_weight="80"
            android:background="@drawable/rounded_gray"
            android:elevation="10dp" >
            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="30dp"
                android:text="Restaurantes Registrados"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtEliminartxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="55dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="90dp"
                android:layout_marginHorizontal="10dp"
                android:text="Busca un restaurante de la lista para visualizar su información"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="normal" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/sv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintVertical_bias="0"
                android:layout_marginTop="140dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/rounded_blue_gradient"
                 />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="200dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@id/sv"
                android:background="@drawable/rounded_blue_gradient"/>
        </FrameLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>