<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    tools:context=".VerUser">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/shadow"
        android:elevation="10dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0.85">

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="20dp"
            android:text="Restaurante"
            android:textStyle="bold"
            android:textColor="@color/azul"
            android:textAlignment="center"
            android:textSize="20sp"
            android:scrollbars="vertical"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="60dp"
            android:text="Email"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="20sp"
            android:scrollbars="vertical"/>

        <TextView
            android:id="@+id/admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="90dp"
            android:text="Admin"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="20sp"
            android:scrollbars="vertical"/>
        <Button
            android:id="@+id/eliminar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="5dp"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="140dp"
            android:text="&#x2716; Eliminar"
            android:background="@drawable/rounded_red" />
        <FrameLayout
            android:id="@+id/modalDelete"
            android:layout_width="300dp"
            android:layout_height="235dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="20dp"
            android:layout_weight="80"
            android:background="@drawable/rounded_white"
            android:elevation="10dp"
            android:visibility="invisible"
            android:alpha=".85">
            <TextView
                android:id="@+id/txtEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="30dp"
                android:text="Eliminar"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtEliminartxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="55dp"
                android:text="Â¿Seguro que desea eliminar?"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtEliminarInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="80dp"
                android:text="Datos Cliente"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="normal" />
            <Button
                android:id="@+id/btnNo"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="center|left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="70dp"
                android:textStyle="bold"
                android:background="@drawable/rounded_blue"
                android:text="No"
                android:elevation="10dp"/>
            <Button
                android:id="@+id/btnSi"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="20dp"
                android:layout_marginTop="70dp"
                android:textStyle="bold"
                android:background="@drawable/rounded_red"
                android:text="Si"
                android:elevation="10dp"/>
        </FrameLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>